<?xml version="1.0"?>
<package >
  <metadata>
    <id>$PackageId$</id>
    <version>$PackageVersion$</version>
    <authors>Userware</authors>
    <projectUrl>https://www.opensilver.net</projectUrl>
    <repository type="git" url="$RepositoryUrl$" />
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>OpenSilver is an open-source reimplementation of Silverlight that runs on current browsers via WebAssembly.</description>
    <copyright>Copyright (c) 2022, Userware. All rights reserved.</copyright>
    <tags>silverlight webassembly csharp xaml wasm dotnet .net C# javascript html html5 blazor mono uwp</tags>
    <!-- <iconUrl> is deprecated and replaced by <icon> -->
    <!--<iconUrl>https://opensilver.net/permalinks/images/OpenSilver_logo_128x128.png</iconUrl>-->
    <icon>images\OpenSilver_icon.png</icon>
    <!--<licenseUrl>http://LICENSE_URL_HERE_OR_DELETE_THIS_LINE</licenseUrl>-->
    <!--<releaseNotes>Summary of changes made in this release of the package.</releaseNotes>-->
    <dependencies>
			<group targetFramework="net7.0">
        <dependency id="OpenSilver" version="1.2.0-preview-2023-02-13-213823-6da652f8" />
      </group>
    </dependencies>
    
    <contentFiles>
        <files include="wwwroot/libs/**" buildAction="None" copyToOutput="true"/>
    </contentFiles>
  </metadata>
  <files>
    <!-- OpenSilver runtime -->
    <file src="../../src/OpenSilver.Blazor/bin/$Configuration$/net7.0/OpenSilver.Blazor.dll" target="lib/net7.0/OpenSilver.Blazor.dll" />
    <file src="../../src/OpenSilver.Blazor/bin/$Configuration$/net7.0/OpenSilver.Blazor.pdb" target="lib/net7.0/OpenSilver.Blazor.pdb" />
    <file src="../../src/OpenSilver.Blazor/bin/$Configuration$/net7.0/OpenSilver.Blazor.xml" target="lib/net7.0/OpenSilver.Blazor.xml" />
    
    <!-- OpenSilver.Blazor targets -->
    <file src="../../src/Targets/$Target$.targets" target="build/$PackageId$.targets" />
    
    <!-- OpenSilver JS and CSS files -->
    <file src="../../js_css/opensilver.js" target="js_css" />
    <file src="../../js_css/cshtml5.css" target="js_css" />
    <file src="../../js_css/cshtml5.js" target="js_css" />
    <file src="../../js_css/flatpickr.css" target="js_css" />
    <file src="../../js_css/flatpickr.js" target="js_css" />
    <file src="../../js_css/velocity.js" target="js_css" />
    <file src="../../js_css/ResizeObserver.js" target="js_css" />    
    <file src="../../js_css/quill.min.js" target="js_css" />
    <file src="../../js_css/quill.core.css" target="js_css" />
    
    <!-- OpenSilver icon -->
    <file src="OpenSilver_icon.png" target="images\OpenSilver_icon.png" />

    <!-- Version.txt file (dynamically generated by the .BAT file) -->
    <file src="../../temp/Version.txt" target="Version.txt" />
  </files>
</package>
